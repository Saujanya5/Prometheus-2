@model IEnumerable<Prometheus_MVC.Models.CourseViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    @@import "https://use.fontawesome.com/releases/v5.5.0/css/all.css";



    table th, table td {
        text-align: center;
    }

    th {
        background-color: #BEF2F5;
    }

    table tr:nth-child(even) {
        background-color: #BEF2F5;
    }

    table tr:nth-child(odd) {
        background-color: #fff;
    }

    .pagination li:hover {
        cursor: pointer;
    }

   
</style>
<h1>Course Managment</h1>

<div onclick="location.href='https://localhost:44344/TeacherHome'">
    <h4 style="cursor:pointer;color:gold"><i class="fas fa-chevron-circle-left"></i> Back</h4>
</div>
<p>
    <a asp-action="Create" style="font-weight:100;"><i class="fas fa-plus-square"></i>Create New</a>
</p>

<table class="table table-striped table-bordered table-sm">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CourseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                Active Status
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CourseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            @if (Convert.ToBoolean(item.Status))
            {
                <td>
                    Active
                </td>
            }
            else
            {
                <td>Inactive</td>
            }
            <td>
                <a asp-action="Edit" asp-route-id="@item.CourseId"><i class="fas fa-edit"></i></a> |
                <a asp-action="Details" asp-route-id="@item.CourseId"><i class="fas fa-info-circle"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.CourseId"><i class="fas fa-trash"></i></a>
            </td>
        </tr>
        }
        
    </tbody>
</table>
